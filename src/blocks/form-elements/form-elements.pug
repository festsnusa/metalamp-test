          span.dropdown__input-icon.material-symbols-outlined expand_more
      .input-masked-field
        .input
          .input__header
            p.input__title MASKED TEXT FIELD
          input.input__box(name="Masked field" placeholder="ДД.ММ.ГГГГ")
      .input-date-dropdown
