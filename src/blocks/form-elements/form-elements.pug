include __inputs/__inputs.pug
include __dropdown/__dropdown.pug
include __datepicker/__datepicker.pug
include __checkbox/__checkbox.pug
include __radio-buttons/__radio-buttons.pug
include __toggle/__toggle.pug
include __like-button/__like-button.pug
include __rate-button/__rate-button.pug
include __range-slider/__range-slider.pug
include __buttons/__buttons.pug
include __dropdown/__dropdown__beds.pug
include __pagination/__pagination.pug
include __rich-checkbox/__rich-checkbox.pug
include __description/__description.pug
include __comment/__comment.pug
include __bullet-list/__bullet-list.pug

.nav
  a.logo(href="#") 
    img(src="../../assets/images/logo-colorless.svg", alt="logo")
.main
  .main__section
    .first-column
      +createInput({class: "default", inputType: "text", name: "email", placeholder: "Email", title: "Text Field", subtitle: "Default"})
      +createInput({class: "hover", inputType: "text", name: "This is pretty awesome", placeholder: "This is pretty awesome", title: "Text Field", subtitle: "Default"})
      +createDropdown({title: "Dropdown", listClass: "shrinked", placeholder: "Сколько гостей", footer}, {Взрослые: 'adults', Дети: 'children', Младенцы: 'babies'})
      +createInput({class: "field", name: "masked-field", placeholder: "ДД.ММ.ГГГГ", title: "Masked text field", inputClass: "js-input__box--masked-field"})
      +createCalendar("date-picker-start", "date-picker-end", true, ["Date Dropdown", "Date Dropdown"])
      +createSingleInputCalendar("Filter Date Dropdown")
      +createSubscriptionField("Subscription Text Field")
    .gap
    .second-column
      +createCheckboxItem('Checkbox Buttons', {1: ["smoke-allow", true, "Можно курить"], 2: ["pet-allow", true, "Можно с питомцами"], 3: ["guests-allow", false, "Можно пригласить гостей (до 10 человек)"]})
      +createRadioButton({1: ["gender", true, "Мужчина"], 2: ["gender", false, "Женшина"]}, 'Radio Buttons')
      +toggle({1: [true, "Получать спецпредложения"], 2: [false, "Получать спецпредложения"]}, "Toggle")
      .like-buttons
        p.like-buttons__title like button
        .like-buttons__box
          +likeButtonContent(2, 'favorite_border')
          +likeButtonContent(12, 'favorite')
      .rate-button
        p.rate-button__title Rate button
        .rate-button__group
          +rateButton(4, 1)
          +rateButton(5)
    .gap
    .third-column
      +createRangeSlider('Range slider')
      +createButtons('Buttons')
      +createLinks(15, true, true)

  .main__section
    .first-column
      +createDropdown({placeholder: '2 спальни, 2 кровати', title: 'Dropdown', subtitle: 'Default',}, {'Спальни': 'bedrooms', 'Кровати': 'beds', 'Ванные комнаты': 'bathrooms'}, [2, 2, 0])
      +createDropdown({placeholder: '2 спальни, 2 кровати', title: 'Dropdown', subtitle: 'Expanded', expanded}, {'Спальни': 'bedrooms', 'Кровати': 'beds', 'Ванные комнаты': 'bathrooms'}, [2, 2, 0])      
    .gap 
    .second-column 
      +createDropdown({title: "Dropdown", listClass: "shrinked", placeholder: "Сколько гостей", footer}, {Взрослые: 'adults', Дети: 'children', Младенцы: 'babies'})

    .gap 
    .third-column
      +createDropdown({title: "Dropdown", listClass: "expanded", placeholder: "Сколько гостей", footer}, {Взрослые: 'adults', Дети: 'children', Младенцы: 'babies'})

  .main__section
    .first-column
      -let expandableTitle = 'Expandable Checkbox List'
      -let expandableCheckboxOptions = {1: ["breakfast", true, "Завтрак"], 2: ["desk", true, "Письменный стол"], 3: ["feeding-chair", false, "Стул для кормления"], 4: ["tv", false, "Телевизор"], 5: ["shampoo", false, "Шампунь"], 6: ["tv", false, "Телевизор"], 7: ["shampoo", false, "Шампунь"]}
      +createCheckboxExpandable(expandableTitle, expandableCheckboxOptions, false)
      +createCheckboxExpandable(expandableTitle, expandableCheckboxOptions, true)

    .gap 
    .second-column 
      .rich-checkbox
        p.rich-checkbox__header Rich сheckbox buttons
        +createRichCheckboxList
    .gap 
    .third-column
      .bullet-list 
        p.bullet-list__header Bullet list
        +createBulletList
  .main__section
    .first-column
      +createDescription
    .gap 
    .second-column
      -let comment = "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
      +createCommentSection("../../assets/images/profile.jpg", "Мурад Сарафанов", "5", 12, 'favorite', comment)

