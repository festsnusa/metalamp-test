link(rel="stylesheet", href="form-elements.css")
nav
  a.logo(href="#") 
    img(src="../../assets/images/logo-colorless.svg", alt="logo")
.main
  .main__section
    .first-column
      .input-default
        .input
          .input__header
            p.input__title Text Field
            p.input__subtitle Default
          input.input__box(type="email" name="email" placeholder="Email")
      .input-hover
        .input
          .input__header
            p.input__title Text Field
            p.input__subtitle Hover / Focus
          input.input__box(name="This is pretty awesome" placeholder="This is pretty awesome")
      .dropdown
        p.dropdown__title Dropdown
        p.dropdown__subtitle Default
        .dropdown__box
          input.dropdown__input(placeholder="Сколько гостей" name="number-of-guests" readonly="readonly")
          span.dropdown__input-icon.material-symbols-outlined expand_more
      .input-masked-field
        .input
          .input__header
            p.input__title MASKED TEXT FIELD
          input.input__box(name="Masked field" placeholder="ДД.ММ.ГГГГ")
      .input-date-dropdown
        .date-dropdown
          .date-dropdown__box
            .date-dropdown__title Date Dropdown
            .date-dropdown__input-box
              input.date-dropdown__input(name="date-dropdown-input" placeholder="ДД.ММ.ГГГГ" readonly="readonly")
              span.date-dropdown__input-icon.material-symbols-outlined expand_more
          .date-dropdown__box
            .date-dropdown__title Date Dropdown
            .date-dropdown__input-box
              input.date-dropdown__input(name="date-dropdown-input" placeholder="ДД.ММ.ГГГГ" readonly="readonly")
              span.date-dropdown__input-icon.material-symbols-outlined expand_more
      .filter-date-dropdown
        p.filter-date-dropdown__title Filter date dropdown
        .filter-date-dropdown__input-box
          input.filter-date-dropdown__input(name="filter-date" placeholder="ДД.ММ.ГГГГ" readonly="readonly")
          span.filter-date-dropdown__input-icon.material-symbols-outlined expand_more
      .subscription-field
        p.subscription-field__title Subscription text field
        .subscription-field__input-box
          input.subscription-field__input(type="email" name="subscription-text" placeholder="Email")
          button.subscription-field__input-button.material-symbols-outlined(type="submit") arrow_forward
    .gap
    .second-column
      .checkbox
        p.checkbox__title Checkbox Buttons
        ul.checkbox__list
          li.checkbox__item
            label.checkbox__label
              input.checkbox__input(type="checkbox" name="smoke-allow" checked="checked")
              span.checkbox__checkbox
              span.checkbox__subtitle Можно курить
          li.checkbox__item
            label.checkbox__label
              input.checkbox__input(type="checkbox" name="pet-allow" checked="checked")
              span.checkbox__checkbox
              span.checkbox__subtitle Можно с питомцами     
          li.checkbox__item
            label.checkbox__label
              input.checkbox__input(type="checkbox" name="guest-allow" checked="checked")
              span.checkbox__checkbox
              span.checkbox__subtitle Можно пригласить гостей (до 10 человек)
      .radio-buttons
        p.radio-buttons__title Radio Buttons
          .radio-buttons__box
            .radio-buttons__item
              input(type="radio" name="sex" checked="checked")
              span.radio-buttons__radio
              span.radio-buttons__subtitle Мужчина
            .radio-buttons__item
      
            
            
        
      .toggle
      .like-buttons
      .rate-buttons
    .gap
    .third-column
