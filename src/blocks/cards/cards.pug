nav
  a.logo(href="#") 
    img(src="../../assets/images/logo-colorless.svg" alt="#")
.main   
  .main__firstColumn 
    .main__card 
      .room-search 
        .room-search__header
          p.room-search__title Найдём номера под ваши пожелания
        .room-search__calendar
          +createDateDropdown({1: ["Прибытие", "ДД.ММ.ГГГГ"], 2: ["Выезд", "19.08.2019"]})
          +dropdownGuests("Гости", false)
        .room-search__submit-button 
          +createProceedButton("Подобрать номер")

    .main__card 
      .registration-form 
        p.registration-form__title Регистрация аккаунта
        +inputDefault("text", "name", "Имя")
        +inputDefault("text", "surname", "Фамилия")
        +createRadioButton({1: ["gender", true, "Мужчина"], 2: ["gender", false, "Женшина"]}, title='')
        +inputMaskedField('Дата рождения', 'masked-field', "ДД.ММ.ГГГГ")
        +inputDefault("email", "email", "Email", "Данные для входа в сервис")
        +inputDefault("password", "password", "Пароль")
        +toggle({1: [false, "Получать спецпредложения"]})
        +createProceedButton("Перейти к оплате")
        .registration-form__box 
          p.registration-form__caption Уже есть аккаунт на Toxin 
          +createButton("Войти", "white", "purple", false)
  .main__secondColumn 
    .main__card 
      .booking-form
        .booking-form__header 
          .booking-form__room 
            span.booking-form__room--span №
            p.booking-form__room--number 888
            p.booking-form__room--luxe люкс
          .booking-form__price 
            p.booking-form__price--price 9 990₽
            p.booking-form__price--per-day в сутки
        .booking-form__arrival
          +createDateDropdown({1: ["Прибытие", "ДД.ММ.ГГГГ"], 2: ["Выезд", "19.08.2019"]})
        .booking-form__dropdown
          +dropdownGuests("Гости", false)
        .booking-form__calculations 
          .booking-form__total-per-days
            p.booking-form__total-per-days--multiplied 9 990₽ х 4 суток
            p.booking-form__total-per-days--result 39 960₽
          .booking-form__discounts 
            p.booking-form__service--name Сбор за услуги: скидка 2 179₽
            span.booking-form__service--ellipse
              span.booking-form__service--ellipse--info i
            p.booking-form__service--amount 0₽
          .booking-form__additional-services 
            p.booking-form__service--name Сбор за дополнительные услуги
            span.booking-form__service--ellipse
              span.booking-form__service--ellipse--info i
            p.booking-form__service--amount 300₽
          .booking-form__total
            p.booking-form__total--title Итого
            p.booking-form__total--dots
            p.booking-form__total--result 38 081₽
        .booking-form__submit-button
          +createProceedButton("Забронировать")

    .main__card 
      .login-form 
        p.login-form__header Войти
        +inputDefault("email", "email", "Email")
        +inputDefault("password", "password", "Пароль")
        //- .login-form__email 
        //-   input.input__box(type="email" name="email" placeholder="Email")
        //- .login-form__password 
        //-   input.input__box(name="password" placeholder="Пароль")
        .login-form__button
          +createProceedButton("Забронировать")
        .login-form__box
          p.login-form__caption Нет аккаунта на Toxin?
          +createButton("Создать", "white", "purple", false)

  .main__thirdColumn 
    .main__card 
      .date-dropdown 
        .date-dropdown__calendar 
          +createCalendar

    .main__card 
      .room-preview
        .room-preview__slider 
          .image-slider__previous-button
            span.material-symbols-outlined expand_more
          .image-slider--active
            img(src="../../assets/images/room-1-slider.jpg" alt="Фото 1")
          .image-slider 
            img(src="../../assets/images/room-1-slider.jpg" alt="Фото 2")
          .image-slider 
            img(src="../../assets/images/room-1-slider.jpg" alt="Фото 3")
          .image-slider 
            img(src="../../assets/images/room-1-slider.jpg" alt="Фото 4")
          .image-slider__forward-button
            span.material-symbols-outlined expand_more
          .image-slider__dots-box 
            span.image-slider__dot
            span.image-slider__dot
            span.image-slider__dot
            span.image-slider__dot
        .room-preview__description
          .room-preview__header
            .room-preview__room-number 
              p.room-preview__room-symbol №
              p.room-preview__room-value 888
              p.room-preview__room-luxe люкс
            .room-preview__room-cost
              span.room-preview__amount 9 990₽
